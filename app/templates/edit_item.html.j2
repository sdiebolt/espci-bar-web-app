{% extends 'base.html.j2' %}

{% block app_content %}
<div class="container">
    <form action="" method="post" role="form" class="centered-form" novalidate>
      {{ form.hidden_tag() }}
      <h1 class="mb-3">Edit item</h1>
      <div class="form-group">
        {{ form.name.label()}}
        {{ form.name(class_='form-control') }}
      </div>
      <div class="form-group">
        {{ form.quantity.label()}}
        {{ form.quantity(class_='form-control') }}
      </div>
      <div class="form-group">
        {{ form.price.label()}}
        {{ form.price(class_='form-control') }}
      </div>
      <div class="form-group form-check">
        {{ form.is_alcohol(class_='form-check-input') }}
        {{ form.is_alcohol.label()}}
      </div>
      <div class="form-group form-check">
        {{ form.is_quantifiable(class_='form-check-input') }}
        {{ form.is_quantifiable.label()}}
      </div>
      <div class="form-group form-check">
        {{ form.is_favorite(class_='form-check-input') }}
        {{ form.is_favorite.label()}}
      </div>
      {{ form.submit(class_='btn btn-primary') }}
  </div>
</div>
{% endblock %}
