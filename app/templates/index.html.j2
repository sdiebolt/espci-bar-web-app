{% extends 'base.html.j2' %}

{% block app_content %}
<!-- User sorting -->
<div class="container my-1">
  <div class="btn-toolbar justify-content-between" role="toolbar" aria-label="User sorting">
    <div class="btn-group" role="group" aria-label="Alphabet sorting">
      <a class="btn btn-outline-primary{% if sort == 'asc' %} active{% endif %}" href="{{ url_for('main.index', sort='asc', grad_class=grad_class) }}" data-original-title="Sort By Alphabet" role="button"><i class="material-icons align-middle">arrow_downward</i></a>
      <a class="btn btn-outline-primary{% if sort == 'desc' %} active{% endif %}" href="{{ url_for('main.index', sort='desc', grad_class=grad_class) }}" data-original-title="Sort By Alphabet" role="button"><i class="material-icons align-middle">arrow_upward</i></a>
    </div>
    <div class="btn-group" role="group" aria-label="Graduating classes">
      <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownGradClass" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          {% if grad_class != 0 %}{{ grad_class }}<sup>th</sup>{% else %}Extern{% endif %} <span class="caret"></span>
        </button>
        <div class="dropdown-menu scrollable-menu" aria-labelledby="dropdownMenuButton">
          {% for gc in grad_classes %}
          <a class="dropdown-item" href="{{ url_for('main.index', grad_class=gc) }}">
            {% if gc != 0 %}
            {{ gc }}
            {% else %}
            Extern
            {% endif %}
          </a>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

<div style="margin-top:10px"></div>

<div class="container">
  <div class="row">
    {% for user in users.items %}
    <div class="col-lg-3 col-md-4 col-sm-6 col-6">
      <div class="card mb-4 shadow {% if not user.deposit %}text-secondary border-secondary{% elif user.balance <= 0 %}text-danger border-danger{% elif user.balance <= 5 %}text-warning border-warning{% else %}text-primary border-primary{% endif %}">
        <a href="{{ url_for('main.user', username=user.username) }}">
          <img class="card-img-top img-fluid" src="{{ user.avatar() }}" alt="{{ user.username }}">
        </a>
        <div class="card-body">
          <h5 class="card-title text-nowrap user-card-title">
            {% if user.nickname %}
            "{{ user.nickname }}"<br>{{ user.last_name|upper }}
            {% else %}
            {{ user.first_name }}<br>{{ user.last_name|upper }}
            {% endif %}
          </h5>
        </div>
        <div class="card-footer">
          {% if user.deposit %}
          <div class="btn-toolbar justify-content-between" role="toolbar" aria-label="Pay and quick access item">
            <div class="btn-group" role="group" aria-label="Pay">
              {% include '_pay.html.j2' %}
              {% include '_quick_access_item.html.j2' %}
            </div>
          </div>
          {% else %}
          <div class="btn-toolbar justify-content-between" role="toolbar" aria-label="Deposit">
            <div class="btn-group" role="group" aria-label="Deposit">
              {% include '_deposit.html.j2' %}
            </div>
          </div>
          {% endif %}
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
</div>

<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center">
    {%- for page in users.iter_pages() %}
    <li class="page-item{% if page == users.page %} active{% endif %}{%if not page %} disabled{% endif %}">
      <a class="page-link" href="{{ url_for('main.index', page=page, sort=sort, grad_class=grad_class) }}">
        {% if page %}
        {{ page }}
        {% else %}
        <span class=ellipsis>â€¦</span>
        {% endif %}
      </a>
      {%- endfor %}
    </li>
  </ul>
</nav>
{% endblock %}

{% block scripts %}
{{ super() }}

<!-- Populate pay dropdown -->
<script>
$(document).ready(function() {
  $(".pay-btn").one('click', function() {
    var pay_btn = $(this)
    var dropdown = $(pay_btn).find('.dropdown-menu')
    $(dropdown).html('<div class="d-flex justify-content-center"><div class="spinner-border" role="status"><span class="sr-only">Loading...</span></div></div>')
    $.post('/get_user_products', {
      username: $(pay_btn).attr('id').replace('-pay-btn', '')
    }).done(function(response) {
      $(dropdown).html(response['html'])
    }).fail(function() {
      $(dropdown).html('Error: Could not contact server.')
    })
  })
})
</script>
{% endblock %}
